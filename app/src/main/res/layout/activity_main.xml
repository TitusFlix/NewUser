<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_row="0"
        android:layout_column="0">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="?attr/colorButtonNormal"
            android:textColor="#230d0a"
            android:text="WELCOME TO NGONG SACCO"
            android:textSize="29sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0b040f"
            android:textSize="15sp"
            android:text="Enter Email or Cell to Proceed"/>
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0eccd"
            android:onClick="OpenReg"

            android:textColor="#000000"
            android:text="Proceed to Registration" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f2fbfb"
            android:src="@drawable/sacco"
            android:scaleX="1"
            android:scaleY=".8"
            />
    </LinearLayout>

</GridLayout>